{
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "4.8.*",
        "twbs/bootstrap": "3.3.7",
        "wp-bootstrap/wp-bootstrap-navwalker" : "2.0.5",
        "cwspear/bootstrap-hover-dropdown" : "2.2.1",
        "phpmailer/phpmailer" : "^5.2",
        "FortAwesome/Font-Awesome" : "*",
        "nicolasbize/magicsuggest" : "*",
        "google/recaptcha" : "*",
        "wpackagist-plugin/rest-api-oauth1":"0.3.*",
        "eternicode/bootstrap-datepicker" : "1.7.1",
        "vitalets/x-editable" : "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*"
    },
    "extra": {
        "wordpress-install-dir": "public/wp",
        "installer-paths": {
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash post-install.sh"
        ],
        "post-update-cmd": [
            "bash post-install.sh"
        ]
    }
}
